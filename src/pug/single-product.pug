doctype html
html(lang="en")
    head
        include inc/head.pug

    body
        include inc/loader.pug

        // Header Area
        .header-area#headerArea
            .container.h-100.d-flex.align-items-center.justify-content-between
                // Back Button
                .back-button
                    a(href="shop-grid.html")
                        i.lni.lni-arrow-left

                // Page Title
                .page-heading
                    h6.mb-0 Product Details

                // Navbar Toggler
                .suha-navbar-toggler.d-flex.justify-content-between.flex-wrap#suhaNavbarToggler
                    span
                    span
                    span

        include inc/sidenav.pug

        .page-content-wrapper
            // Product Slides
            .product-slides.owl-carousel
                // Single Hero Slide
                .single-product-slide(style="background-image: url('img/bg-img/6.jpg')")

                // Single Hero Slide
                .single-product-slide(style="background-image: url('img/bg-img/10.jpg')")

                // Single Hero Slide
                .single-product-slide(style="background-image: url('img/bg-img/11.jpg')")

            .product-description.pb-3

                // Product Title & Meta Data
                .product-title-meta-data.bg-white.mb-3.py-3
                    .container.d-flex.justify-content-between
                        .p-title-price
                            h6.mb-1 Flower Ceramic Pots
                            p.sale-price.mb-0 $38
                                span $41
                        .p-wishlist-share
                            a(href="wishlist-grid.html")
                                i.lni.lni-heart
                    // Ratings
                    .product-ratings
                        .container.d-flex.align-items-center.justify-content-between
                            .ratings
                                i.lni.lni-star-filled
                                i.lni.lni-star-filled
                                i.lni.lni-star-filled
                                i.lni.lni-star-filled
                                i.lni.lni-star-filled
                                span.pl-1 3 ratings

                            .total-result-of-ratings
                                span 5.0
                                span Very Good                                

                // Flash Sale Panel
                .flash-sale-panel.bg-white.mb-3.py-3
                    .container
                        // Sales Offer Content
                        .sales-offer-content.d-flex.align-items-end.justify-content-between
                            // Sales End
                            .sales-end
                                p.mb-1.font-weight-bold
                                    i.lni.lni-bolt
                                    |  Flash sale end in

                                // Please use event time this format: YYYY/MM/DD hh:mm:ss
                                ul.sales-end-timer.pl-0.d-flex.align-items-center(data-countdown="2022/01/01 14:21:37")
                                    li
                                        span.days 0
                                        | d
                                    li
                                        span.hours 0
                                        | h
                                    li
                                        span.minutes 0
                                        | m
                                    li
                                        span.seconds 0
                                        | s

                            // Sales Volume
                            .sales-volume.text-right
                                p.mb-1.font-weight-bold 82% Sold Out
                                .progress(style="height: 6px;")
                                    .progress-bar.bg-warning(role="progressbar", style="width: 82%;", aria-valuenow="82", aria-valuemin="0", aria-valuemax="100")

                // Selection Panel
                .selection-panel.bg-white.mb-3.py-3
                    .container.d-flex.align-items-center.justify-content-between
                        // Choose Color
                        .choose-color-wrapper
                            p.mb-1.font-weight-bold Color
                            .choose-color-radio.d-flex.align-items-center
                                // Single Radio Input
                                .form-check.mb-0
                                    input.form-check-input.blue#colorRadio1(type="radio", name="colorRadio", checked)
                                    label.form-check-label(for="colorRadio1")

                                // Single Radio Input
                                .form-check.mb-0
                                    input.form-check-input.yellow#colorRadio2(type="radio", name="colorRadio")
                                    label.form-check-label(for="colorRadio2")

                                // Single Radio Input
                                .form-check.mb-0
                                    input.form-check-input.green#colorRadio3(type="radio", name="colorRadio")
                                    label.form-check-label(for="colorRadio3")

                                // Single Radio Input
                                .form-check.mb-0
                                    input.form-check-input.purple#colorRadio4(type="radio", name="colorRadio")
                                    label.form-check-label(for="colorRadio4")

                        // Choose Size
                        .choose-size-wrapper.text-right
                            p.mb-1.font-weight-bold Size
                            .choose-size-radio.d-flex.align-items-center
                                // Single Radio Input
                                .form-check.mb-0.mr-2
                                    input.form-check-input#sizeRadio1(type="radio", name="sizeRadio")
                                    label.form-check-label(for="sizeRadio1") S

                                // Single Radio Input
                                .form-check.mb-0.mr-2
                                    input.form-check-input#sizeRadio2(type="radio", name="sizeRadio", checked)
                                    label.form-check-label(for="sizeRadio2") M

                                // Single Radio Input
                                .form-check.mb-0
                                    input.form-check-input#sizeRadio3(type="radio", name="sizeRadio")
                                    label.form-check-label(for="sizeRadio3") L

                // Add To Cart
                .cart-form-wrapper.bg-white.mb-3.py-3
                    .container
                        form.cart-form(action="#" method="")
                            .order-plus-minus.d-flex.align-items-center
                                .quantity-button-handler -
                                input.form-control.cart-quantity-input(type="text", step="1", name="quantity", value="3")
                                .quantity-button-handler +
                            button.btn.btn-danger.ml-3(type="submit") Add To Cart

                // Product Specification
                .p-specification.bg-white.mb-3.py-3
                    .container
                        h6 Specifications
                        p Lorem ipsum dolor sit amet consectetur adipisicing elit. Quasi, eum? Id, culpa? At officia quisquam laudantium nisi mollitia nesciunt, qui porro asperiores cum voluptates placeat similique recusandae in facere quos vitae?

                        ul.mb-3.pl-3
                            li
                                i.lni.lni-checkmark-circle 
                                |  100% Good Reviews
                            li
                                i.lni.lni-checkmark-circle 
                                |  7 Days Returns
                            li 
                                i.lni.lni-checkmark-circle  
                                |  Warranty not Aplicable
                            li 
                                i.lni.lni-checkmark-circle  
                                |  100% Brand New Product

                        p.mb-0 Lorem ipsum dolor sit amet consectetur adipisicing elit. Quasi, eum? Id, culpa? At officia quisquam laudantium nisi mollitia nesciunt, qui porro asperiores cum voluptates placeat similique recusandae in facere quos vitae?

                // Rating & Review Wrapper
                .rating-and-review-wrapper.bg-white.py-3.mb-3
                    .container
                        h6 Ratings &amp; Reviews

                        .rating-review-content
                            ul.pl-0
                                li.single-user-review.d-flex
                                    .user-thumbnail
                                        img(src="img/bg-img/7.jpg", alt="")
                                    .rating-comment
                                        .rating
                                            i.lni.lni-star-filled
                                            i.lni.lni-star-filled
                                            i.lni.lni-star-filled
                                            i.lni.lni-star-filled
                                            i.lni.lni-star-filled
                                        p.comment.mb-0 Very good product. It's just amazing!
                                        span.name-date Designing World 12 Dec 2020

                                li.single-user-review.d-flex
                                    .user-thumbnail
                                        img(src="img/bg-img/8.jpg", alt="")
                                    .rating-comment
                                        .rating
                                            i.lni.lni-star-filled
                                            i.lni.lni-star-filled
                                            i.lni.lni-star-filled
                                            i.lni.lni-star-filled
                                            i.lni.lni-star-filled
                                        p.comment.mb-0 WOW excellent product. Love it.
                                        span.name-date Designing World 8 Dec 2020

                                li.single-user-review.d-flex
                                    .user-thumbnail
                                        img(src="img/bg-img/9.jpg", alt="")
                                    .rating-comment
                                        .rating
                                            i.lni.lni-star-filled
                                            i.lni.lni-star-filled
                                            i.lni.lni-star-filled
                                            i.lni.lni-star-filled
                                            i.lni.lni-star-filled
                                        p.comment.mb-0 What a nice product it is. I am looking it's.
                                        span.name-date Designing World 28 Nov 2020

                // Ratings Submit Form
                .ratings-submit-form.bg-white.py-3
                    .container
                        h6 Submit A Review
                        form(action="#" method="")
                            .stars.mb-3
                                input(type="radio" name="star" class="star-1" id="star1")
                                label.star-1(for="star1")
                                input(type="radio" name="star" class="star-2" id="star2")
                                label.star-2(for="star2")
                                input(type="radio" name="star" class="star-3" id="star3")
                                label.star-3(for="star3")
                                input(type="radio" name="star" class="star-4" id="star4")
                                label.star-4(for="star4")
                                input(type="radio" name="star" class="star-5" id="star5")
                                label.star-5(for="star5")
                                span
                            textarea.form-control.mb-3#comments(name="comment", cols="30", rows="10", data-max-length="200", placeholder="Write your review...")
                            button.btn.btn-sm.btn-primary(type="submit") Save Review

        include inc/footer-nav.pug

        include inc/footer.pug