doctype html
html(lang="en")
    head
        include inc/head.pug

    body
        include inc/loader.pug

        // Login Wrapper Area
        .login-wrapper.d-flex.align-items-center.justify-content-center.text-center
            // Background Shape
            .background-shape
            
            .container
                .row.justify-content-center
                    .col-12.col-sm-9.col-md-7.col-lg-6.col-xl-5
                        img.big-logo(src="img/core-img/logo-white.png" alt="")

                        // Register Form
                        .register-form.mt-5.px-4
                            form(action="home.html" method="")
                                .form-group.text-left.mb-4
                                    span Username
                                    label(for="username")
                                        i.lni.lni-user
                                    input.form-control#username(type="text" placeholder="info@example.com")

                                .form-group.text-left.mb-4
                                    span Password
                                    label(for="password")
                                        i.lni.lni-lock
                                    input.form-control#password(type="password" placeholder="********************")

                                button.btn.btn-success.btn-lg.w-100(type="submit") Log In

                        // Login Meta
                        .login-meta-data
                            a.forgot-password.d-block.mt-3.mb-1(href="forget-password.html") Forgot Password?
                            p.mb-0 Didn't have an account?
                                a.ml-1(href="register.html") Register Now

                        // View As Guest
                        .view-as-guest.mt-3
                            a.btn(href="home.html") View as Guest

        include inc/footer-no-internet.pug