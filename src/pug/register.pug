doctype html
html(lang="en")
    head
        include inc/head.pug

    body
        include inc/loader.pug

        // Login Wrapper Area
        .login-wrapper.d-flex.align-items-center.justify-content-center.text-center
            // Background Shape
            .background-shape
            
            .container
                .row.justify-content-center
                    .col-12.col-sm-9.col-md-7.col-lg-6.col-xl-5
                        img.big-logo(src="img/core-img/logo-white.png" alt="")

                        // Register Form
                        .register-form.mt-5.px-4
                            form(action="otp.html" method="")
                                .form-group.text-left.mb-4
                                    span Username
                                    label(for="username")
                                        i.lni.lni-user
                                    input.form-control#username(type="text" placeholder="Designing World")

                                .form-group.text-left.mb-4
                                    span Email
                                    label(for="email")
                                        i.lni.lni-envelope
                                    input.form-control#email(type="email" placeholder="help@example.com")

                                .form-group.text-left.mb-4
                                    span Password
                                    label(for="password")
                                        i.lni.lni-lock
                                    input.input-psswd.form-control#registerPassword(type="password"  placeholder="********************")

                                button.btn.btn-success.btn-lg.w-100(type="submit") Sign Up

                        // Login Meta
                        .login-meta-data
                            p.mt-3.mb-0 Already have an account?
                                a.ml-1(href="login.html") Sign In

        include inc/footer-no-internet.pug