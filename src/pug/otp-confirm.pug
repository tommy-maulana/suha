doctype html
html(lang="en")
    head
        include inc/head.pug

    body
        include inc/loader.pug

        // Login Wrapper Area
        .login-wrapper.d-flex.align-items-center.justify-content-center.text-center
            .container
                .row.justify-content-center
                    .col-12.col-sm-9.col-md-7.col-lg-6.col-xl-5
                        .text-left.px-4
                            h5.mb-1.text-white Verify Phone Number
                            p.mb-4.text-white Enter the OTP code sent to
                                strong.ml-1 +880 106 236 175

                        // OTP Verify Form
                        .otp-verify-form.mt-5.px-4
                            form(action="home.html" method="")
                                .d-flex.justify-content-between.mb-5
                                    input.form-control(type="text", value="9", placeholder="-" maxlength="1")
                                    input.form-control(type="text", value="", placeholder="-" maxlength="1")
                                    input.form-control(type="text", value="", placeholder="-" maxlength="1")
                                    input.form-control(type="text", value="", placeholder="-" maxlength="1")

                                button.btn.btn-warning.btn-lg.w-100(type="submit") Verify &amp; Proceed

                        // Term & Privacy Info
                        .login-meta-data.px-4
                            p.mt-3.mb-0 Don't received the OTP?
                                span#resendOTP.otp-sec.ml-1.text-white

        include inc/footer-otp.pug